# Simple Note Taking Application

def display_notes(notes):
    if not notes:
        print("No notes available.")
    else:
        print("\nYour Notes:")
        for index, note in enumerate(notes, start=1):
            print(f"{index}. {note}")

def add_note(notes):
    note = input("Enter the note you want to add: ")
    notes.append(note)
    print(f'Note added: "{note}"')

def remove_note(notes):
    display_notes(notes)
    try:
        note_index = int(input("Enter the note number to remove: ")) - 1
        if 0 <= note_index < len(notes):
            removed_note = notes.pop(note_index)
            print(f'Note removed: "{removed_note}"')
        else:
            print("Invalid note number.")
    except ValueError:
        print("Please enter a valid number.")

def main():
    notes = []
    while True:
        print("\nNote Taking Menu:")
        print("1. Display Notes")
        print("2. Add Note")
        print("3. Remove Note")
        print("4. Exit")

        choice = input("Choose an option (1-4): ")
        
        if choice == '1':
            display_notes(notes)
        elif choice == '2':
            add_note(notes)
        elif choice == '3':
            remove_note(notes)
        elif choice == '4':
            print("Exiting the program. Goodbye!")
            break
        else:
            print("Invalid choice. Please choose a number between 1 and 4.")

if _name_ == "_main_":
    main()
